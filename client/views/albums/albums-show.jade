.row
  .col-xs-6.col-xs-offset-3
    h1 {{name}}
    form
      .form-group
        label(for='photoUrl') Photo by URL
        input.form-control#photoUrl(type='text', name='url', ng-model='url')
      .form-group
        button.btn.form-control.btn-success(ng-click='savePhoto("url",url,name)') Save Photo
      h3.text-center - OR -
      .form-group
        label(for='photoUpload') Photo Upload
        input(type='file')
        br
        img(src='', height='200', alt='Image previewâ€¦')
      .form-group
        button.btn.form-control.btn-success(ng-click='savePhoto("upload")') Upload Photo
table.table
  tbody
    tr(ng-repeat='image in images')
      td: img(ng-src='{{image.$value}}')
      td: button.btn.btn-danger.btn-xl(ng-click='deletePhoto(image,name)') Delete
      td: button.btn.btn-info.btn-xl(ng-click='setPrimary(image)') Set Primary
